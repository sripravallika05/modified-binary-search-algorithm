class Solution {
  public:
    int findMin(vector<int>& arr) {
    int n=arr.size();
    int low=0,high=n-1;
    int result=INT_MAX;
    while(low<=high){
       int  mid=(low+high)/2;
        if(arr[low]<=arr[mid]){
            result=min(result,arr[low]);
            low=mid+1;
        }
        else{
            high=mid-1;
            result=min(result,arr[mid]);
        }
        
    }
 return result;
    }
};

